{
  "server": "https://test.cernbox.cern.ch",
  "theme": "/cernbox/theme-cernbox-1.0.3/theme.json",
  "openIdConnect": {
    "metadata_url": "https://auth.cern.ch/auth/realms/cern/.well-known/openid-configuration",
    "authority": "https://auth.cern.ch/auth/realms/cern",
    "client_id": "cernbox-service-dev",
    "response_type": "code",
    "scope": "openid profile email"
  },
  "sentry": {
    "dsn" : "",
    "environment" : "development",
    "autoSessionTracking": false
  },
  "options": {
    "contextHelpers": true,
    "runningOnEos": true,
    "useRevaToken": true,
    "cernFeatures": true,
    "disableFeedbackLink": true,
    "listVersions": false,
    "editor": {
      "autosaveEnabled": true,
      "autosaveInterval": 120,
      "openAsPreview": ["MS365", "CodiMD", "collabora (experimental)"]
    },
    "routing": {
      "idBased": false,
      "fullShareOwnerPaths": true
    },
    "disabledExtensions": [
      "com.github.owncloud.web.files.search",
      "com.github.owncloud.web.files.sidebar-panel.activities",
      "com.github.owncloud.web.files.sidebar-panel.projects.sharing"
    ],
    "alertRwFolders": {
      "en": "Anonymously writable folders might be abused to store illicit material. Therefore, the default expiration time has been set to one month. Please consider sharing to specific users or groups if the intended audience has a CERN (primary or external) account.",
      "fr": "Les dossiers accessibles en écriture anonyme peuvent être utilisés abusivement pour stocker du contenu illicite. Par conséquent, le délai d'expiration par défaut a été fixé à un mois. Veuillez envisager de partager ces informations avec des utilisateurs ou des groupes spécifiques si le public visé possède un compte CERN (principal ou externe)."
    }

  },
  "scripts": [
    { "src": "/cernbox/theme-cernbox-1.0.3/custom.js", "async": false }
  ],
  "customTranslations": [
    { "url": "/cernbox/theme-cernbox-1.0.3/translations.json" }
  ],
  "apps": [
    "files",
